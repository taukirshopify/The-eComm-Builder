<style>
    .header-padding {
        background-image: url('{{ section.settings.imgbg | img_url:'' }}');
        background-repeat: no-repeat;
        /* background-position: center; */
        background-size: contain;
    
    
    }

</style>

<section class=" header-padding section-padding">
    <div class="container">
        <!-- header section start-->
        <div class="header">
          <div class="col-lg-12 col-md-12 col-sm-12 col-6">
            <div class="logo">
                <img class="img-fluid" src="{{ section.settings.img | img_url:'' }}" alt="">
            </div>
          </div>

        </div>
        <!-- header section end-->
        <!-- banner section start-->
        <div class="bannar">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <h2 class="bannar-title">{{ section.settings.title }} </h2>
                    <div class="video mt-5">
                        <video muted autoplay loop playsinline controls>
                            <source src="{{ c.settings.u.sources[1].url }}" type="video/mp4">
                         </video>
                    </div>
                    <p>{{ section.settings.p }}</p>
                    <div class="order-section">
                        <h3 class="my-5">{{ section.settings.h2 }}</h3>

                        {% for item in section.blocks %}
                            <h4 class="mb-5"> <i class="fa-solid fa-check"></i> <span class="oredr-spacial"> {{ item.settings.title }} </span>{{ item.settings.dec }}
                       </h4>
                        {% endfor %}
                    
         



                    </div>

                    <button type="button" class="button rounded-pill mt-5"> <i class="fa-solid fa-angles-right"></i>
                        Total Value: $12,973
                    </button>

                    <div class="price">
                        <h3><del>Usually $2,997</del> Only $20</h3>
                        <h4>One time payment</h4>
                    </div>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12 bannar-right">
                    <div class="bannar-right-img">
                        <img class="img-fluid" src="{{ section.settings.img2 | img_url }}" alt="">
                    </div>
                    <p>{{ section.settings.buymore }}</p>
                    <div class="two-part">
                        <div class="first-part">
                            <form class="form">
                                <label for="name"> Full Name:</label>
                                <input type="text" id="name" name="name" placeholder="Enter your name" required="">

                                <label for="email">Email:</label>
                                <input type="text" id="email" name="email" placeholder="Enter your email" required="">

                                <label for="Number">Phone Number</label>
                                <input type="text" id="Number" name="Number" placeholder="Phone Number" required="">

                            </form>
                            <button type="button" class="btn-3 button  mt-5"> <i class="fa-solid fa-angles-right"></i>
                                Choose Products see all
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae et sit
                                    inventore
                                    fugit. Debitis, iste repellat ad voluptate magni labore.</p>
                            </button>
                        </div>

                        <div class="bannar-footer-img">
                            <img class="img-fluid mb-5" src="{{ section.settings.img3 | img_url:'' }}" alt="">

                            <img class="img-fluid mb-5" src="{{ section.settings.img4 | img_url:'' }}" alt="">
                            <img class="img-fluid" src="{{ section.settings.img5 | img_url:'' }}" alt="">
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <!-- banner section end-->
    </div>

</section>



    <!-- section-padding -->
    <section>
        <div class="section-padding">
            <h2>{{ section.settings.title }}</h2>
        </div>
    </section>
    <!-- section-padding -->

    <!-- card section -->
    <section class="card-section">
        <div class="container">
            <div class="row g-3">
                <!-- single-card -->
                {% for item in section.blocks %}
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card-img">
                            <img src="{{ item.settings.bimage | img_url:'' }}" alt="">
                           
                        </div>
                        <div class="card-description">
                            <h4>{{ item.settings.title }}
                            </h4>
                            <p>{{ item.settings.p }}</p>
                        </div>
                    </div>
                {% endfor %}
     

                <!-- single-card -->
              
            </div>
        </div>
    </section>
    <!-- card section -->


    <section>
        <div class="container">
            <div class="row g-3 d-flex align-items-center">
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <img class="img-fluid" src="{{ section.settings.img  | img_url:'' }}" alt="">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <h2 class="slider-2-title">{{ section.settings.t2 }} </h2>
                    <div class="btn btn-6 ">
                        <button><a href="#">{{ section.settings.p2 }}</a></button>
                    </div>
                </div>
            </div>
        </div>
    </section>



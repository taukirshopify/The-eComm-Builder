
    <!-- F.A.Q. section -->
    <section class="faq section-padding">
        <div class="container">

        <div class="row">
          <div class="col-12 ">
            {% for item in section.blocks %}
                <div class="single-faq mb-5">
                   <div class="row align-items-center">
                   <div class="col-md-4 text-center">
                    <h2 class="font-weight-bold color-gold">  {{ forloop.index }}.</h2> 
                    </div>
                    <div class="col-md-6">
                        <h4 class='color-perpal'>  {{ item.settings.title }}</h4>
                        <p>{{ item.settings.dec }}</p>
                    </div>
                  </div>
                
                   



                    
                </div>
            {% endfor %}
    
           </div>
    
        </div>
        {% if section.settings.btn %}
            <a href="{{ section.settings.link-1 }}" class="btn tobottom">
                <i class="fa-solid fa-angles-right"></i> 
                {{ section.settings.btn }}
            
            </a>
        {% endif %}

        </div>

    </section>
    <!-- F.A.Q. section -->
        



    <style>
    .font-weight-bold{
     font-weight:900;
    }
    .color-gold {
        color: #d8b74c;
    }
    .color-perpal {
        color: #56048A;
    }
    
    </style>















        






    <section class="section-padding Dropshipping">
        <div class="container my-5">
            <h2 class="title-padding">{{ section.settings.h2 }}</h2>
            <div class="row">
                {% for item in section.blocks %}
                <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                    <img class="img-fluid" src="{{ item.settings.img | img_url:'' }}" alt="">
                    <h2 class="props-title"> {{ item.settings.title }}</h2>
                    <p class="props-para"> {{ item.settings.dec }}</p>
                </div>
               {% endfor %}


       
            <a href="{{ section.settings.link-1 }}" class="btn tobottom rrrr" >
                <i class="fa-solid fa-angles-right"></i> 
                {{ section.settings.btn }}
            
            </a>
            </div>
  
        </div>

    </section>










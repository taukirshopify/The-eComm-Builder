

        






    <section class="section-padding Stores">
        <div class="container my-5">
            <h2 class="title-padding">{{ section.settings.h2 }}</h2>
            <div class="row">
                {% for item in section.blocks %}
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-4">
                        <div class="img-thumbel">
                            <img class="img-fluid" src="{{ item.settings.img | img_url:'' }}" alt="">
                        </div>
                    </div>
               {% endfor %}


                {% comment %} <button type="button" class="button rounded-pill mt-5"> <i class="fa-solid fa-angles-right"></i> 
               {{ section.settings.btn }}
            </button> {% endcomment %}
            </div>
  
        </div>

    </section>

   








    {% schema %}
    {
        "name": "LD two Card",
        "class": "ldtwoc",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title ",
                "default": "How Dropshipping Works !"
            }


        ],

        "blocks": [
         
            {
                "type": "feature",
                "name": "feature",
                "settings": [
       
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Your Image"
                    }
                    
                ]
            }
        ],
        
        "presets": [
            {
            "name": "LD Two Example store"
            }
            ]
    }
 {% endschema %}
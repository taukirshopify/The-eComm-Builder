

        






    <section class="section-padding Stores">
        <div class="container my-5">
            <h2 class="title-padding">{{ section.settings.title }}</h2>
            <div class="row">
                {% for item in section.blocks %}
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12 ">
                        <div class="img-thumbel text-center">
                            <img class="img-fluid" src="{{ item.settings.img | img_url:'' }}" alt="">
                            <p class="m-0 btn">{{ item.settings.p }}</p>
                        </div>
                    </div>
               {% endfor %}



            </div>
  
        </div>

    </section>

   



<style>
.img-thumbel p{

  text-shadow: 1px 1px 2px #56048a;
}
</style>




    {% schema %}
    {
        "name": "LD two Card",
        "class": "ldtwoc",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title ",
                "default": "How Dropshipping Works !"
            }


        ],

        "blocks": [
         
            {
                "type": "feature",
                "name": "feature",
                "settings": [
       
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Your Image"
                    },
                     {
                        "type": "text",
                        "id": "p",
                        "label": "Store name",
                        "default": "Pet store"
                     }
                    
                ]
            }
        ],
        
        "presets": [
            {
            "name": "LD Two Example store"
            }
            ]
    }
 {% endschema %}
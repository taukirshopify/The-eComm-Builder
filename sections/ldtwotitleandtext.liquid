<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .p-{{ section.id }}{
      color:{{ seciton.settings.color }}
    }
  </style>





    <section class="section-{{ section.id }}-padding title-dec">
        <div class="container text-center">
            <h2 class="title-padding">{{ section.settings.title }}</h2>
            {% if section.settings.p %}
                <p class="color-perpal">{{ section.settings.p}}</p>
            {% endif %}
          
  
        </div>

    </section>

   








    {% schema %}
    {
        "name": "LD two Card",
        "class": "ldtwoc",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 0
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 0
              },
            {
                "type": "text",
                "id": "title",
                "label": "Title ",
                "default": "How Dropshipping Works !"
            },
               {
                "type": "checkbox",
                "id": "color",
                "label": "Make the description blue",
                "default":true
               },
            {
                "type": "richtext",
                "id": "p",
                "label": "dec",
                "default": "<p>dec</p>"
            }


        ],

       
        
        "presets": [
            {
            "name": "Title and description"
            }
            ]
    }
 {% endschema %}
<style>
  
  .snatch_cont{padding:20px;}

  
  
  * {
  box-sizing: border-box;
}

.rows::after {
  content: "";
  clear: both;
  display: block;
}

.colss-3 {width: 25%;float:left;}
  .cols-12{width:100%;}
  
.flip-card {
  background-color: transparent;
  width: 100%;
  perspective: 1000px;
}

.flip-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
/*   box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); */
}

.flip-card:hover .flip-card-inner {
  transform: rotateY(180deg);
}

.flip-card-front, .flip-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

.flip-card-front {
  color: black;
}

.flip-card-back {
  transform: rotateY(180deg);
}
  
  @media only screen and (min-width: 768px){.flip-card{height:300px;}} /* for desktop */
    
    
    
  @media only screen and (max-width: 768px){.flip-card{height:200px;}.colss-3{width:50%;}.cols-12{width:100%;}}/* for mobile */
</style>












<div class="snatch_cont">
<div class="rows">
  <h2 class="centers">{{section.settings.title}}</h2>
</div>

<div class="rows">
  <p class="centers">{{section.settings.sub_title}}</p>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'slide' %}
  <a href="{{block.settings.link}}" target="_blank" >
      <div class="colss-3" data-aos="fade-up"
        data-aos-anchor-placement="center-bottom">
        <div class="flip-card">
  			<div class="flip-card-inner">
        
        
        <div class="flip-card-front">
        <img src="https://cdn.shopify.com/s/files/1/0054/8808/3030/{{ block.settings.image }}" >
        <h3 class="centers">{{block.settings.text}}</h3>
        </div>  
          
              
              <div class="flip-card-back">
              <img src="https://cdn.shopify.com/s/files/1/0054/8808/3030/{{ block.settings.image }}" >
        <h3 class="centers">{{block.settings.text}}</h3>
            </div>
          
         	</div>
		</div> 
  	  </div>
  </a>
  {% endcase %}
{% endfor %}
</div>
{% if section.settings.btn != blank %}  <div class="rows"><div class="cols-12 centers"><a class="btn btn--secondary btn--small section-header__link" href="{{section.settings.btn_url}}">{{section.settings.btn}}</a></div></div>{% endif %}
</div>
{% schema %}
{
  "name": "Portfolio",
  "tag": "section",
  "class": "slideshow",
  "max_blocks": 15,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button url"
    }
  ],
  "blocks": [
     {
       "name": "Portfolio",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "text",
           "id": "text",
           "label": "Heading",
		   "default":"Heading"
         },
         {
           "type": "url",
           "id": "link",
           "label": "Link"
         }
       ]
     }
   ],"presets": [
      {
        "name": "Portfolio",
        "category": "home"
      }
    ]
}
{% endschema %}
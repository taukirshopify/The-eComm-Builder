    <!-- footer section -->
    <section class="footer section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <img class="img-fluid" src="{{ section.settings.img | img_url:'' }}" alt="">
                    <p>{{ section.settings.p }}</p>
                    <ul>

       
                        {% assign footer_menu_4 = section.settings.main-menu2 %}
                        {% for link in linklists[footer_menu_4].links %}
                        <li><a href="{{ link.url }}" >{{link.title}}</a></li>
             
                        {% endfor  %}
                  

                    </ul>
            
                       
                     {{ section.settings.textr }}
                </div>
            </div>
        </div>
    </section>
    <!-- footer section -->




